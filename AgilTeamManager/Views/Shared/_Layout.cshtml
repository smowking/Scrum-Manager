@if ((Session["USUARIO_ID"] == null) || (Session["USUARIO_NOME"] == null))
{
    Response.Redirect("~/Home");
    return;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Styles.Render("~/css/menu.css")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jquery")
</head>

<body style="background-color: #ecf0f5;">

    @Html.Partial("_PartialMenuNavbar")

    @{
        if (ViewBag.Title != null && ViewBag.Title != "")
        {
            Html.RenderPartial("_PartialHeader");
        }
    }

    <div class="bodyPosition">
        <div class="container">

            @Html.Partial("_PartialMenuVertical")

            <div class="body-content" style="position:relative">

                @RenderBody()

            </div>
        </div>
    </div>

    @Html.Partial("_PartialFooter")

    @Scripts.Render("~/bundles/bootstrap")

    @RenderSection("scripts", required: false)
</body>

</html>

<style type="text/css">

    .bodyPosition {
        margin-left: 190px;
        float: left;
        padding: 0;
        min-height: 900px !important;
    }

    .container {
        background-color: #ffffff;
        border-top: 2px solid lightgray;
        margin-top: 10px;
        min-height: 900px !important;
        height: 100% !important;
        border-radius: 4px;
    }
</style>


